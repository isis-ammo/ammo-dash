<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.vu.isis.ammo.dash" 
    android:versionName="@string/ammo_version_name" >
<!-- the version code is set via the 'version.code' variable in the ant script -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:name="DashApp" 
        android:icon="@drawable/app_icon"
		android:label="@string/app_name"
		android:debuggable="true" 
		android:theme="@android:style/Theme.NoTitleBar">
	
		<!-- Activities -->
		<activity android:name=".AboutActivity" />
		
		<activity android:name=".Dash" android:theme="@android:style/Theme.Black" android:label="Dash">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".VideoPreviewActivity" 
		android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="landscape">
			<intent-filter>
				<action android:name="edu.vu.isis.ammo.dash.videopreviewactivity.LAUNCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".preferences.DashPreferences">
			<intent-filter>
				<action
					android:name="edu.vu.isis.ammo.dash.preferences.DashPreferences.LAUNCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>


		<activity android:name=".SubscriptionViewer">
			<intent-filter>
				<action android:name="edu.vu.isis.ammo.dash.SubscriptionViewer.LAUNCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name=".AudioEntryActivity" android:label="Audio Recorder" android:theme="@android:style/Theme.Dialog" />
		
		<activity android:name=".DashCreateShortcut" android:label="Dash Shortcut" android:theme="@android:style/Theme.Black">
			<intent-filter>
				<action android:name="android.intent.action.CREATE_SHORTCUT" />
			</intent-filter>
		</activity>
		<activity android:name=".DashCreateTemplateShortcut" android:label="Dash Shortcut" android:icon="@drawable/template_button2" android:theme="@android:style/Theme.Black" />
		
		<activity android:name=".preview.DashPreview" android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="edu.vu.isis.ammo.dash.preview.DashPreview.LAUNCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name=".template.AmmoTemplateManagerActivity" 
		          android:screenOrientation="portrait" 
		          android:label="Dash Template" 
		          android:taskAffinity="edu.vu.isis.ammo.dash.template">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="edu.vu.isis.ammo.dash.template.AmmoTemplateManager.LAUNCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
	<!-- Receivers -->
		<receiver android:name=".AnnounceReceiver" android:enabled="true">
			<intent-filter>
				<action android:name="AMMO_LOGIN" />
			</intent-filter>
			<intent-filter>
				<action android:name="AMMO_CONNECTED" />
			</intent-filter>
			<intent-filter>
				<action android:name="AMMO_READY" />
				<category android:name="AMMO_RESET_CATEGORY" />
			</intent-filter>
			<intent-filter>
				<action android:name="AMMO_READY" />
				<category android:name="package\:edu.vu.isis.ammo.dash" />
			</intent-filter>
		</receiver>

		<!-- Providers -->
		<provider android:name="edu.vu.isis.ammo.dash.provider.IncidentProvider"
			android:authorities="edu.vu.isis.ammo.dash.provider.incidentprovider">
		</provider>
	</application>

	<uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="edu.vu.isis.ammo.permission.MAKE_REQUEST" />

	<uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
	<uses-permission android:name="android.permission.CONTROL_LOCATION_UPDATES" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.RECORD_VIDEO" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
</manifest> 
