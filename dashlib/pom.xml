<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
		
	<properties>
		<!-- ammogen properties -->		
		<ammogen.type>schema</ammogen.type>		
		<ammogen.template.file>template/ammo_content_provider.stg</ammogen.template.file>
		<ammogen.contract.file>contract/incident.xml</ammogen.contract.file>
		<ammogen.output.dir>${basedir}/target/generated-sources/ammogen</ammogen.output.dir>
		<ammogen.maven.targets>${ammo.home}/AmmoGenerator/ant/maven-targets.xml</ammogen.maven.targets>
	</properties>
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>edu.vu.isis</groupId>
	<artifactId>dashlib</artifactId>
	<packaging>jar</packaging>
	<version>1.4.4</version>
	<name>dashlib</name>

	<distributionManagement>
		<repository>
			<id>nexus</id>
			<url>http://fiddler.aterrasys.com:8081/nexus/content/repositories/vanderbilt</url>
		</repository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>nexus</id>
			<url>http://fiddler.aterrasys.com:8081/nexus/content/repositories/vanderbilt</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-android</artifactId>
			<version>1.6.1-RC1</version>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>edu.vu.isis</groupId>
			<artifactId>ammolib</artifactId>
			<version>1.4.3</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>1.6</version>
			<scope>compile</scope>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<version>2.2.1</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>edu.vu.isis</groupId>
			<artifactId>ammogen</artifactId>
			<version>1.4.3</version>
			<scope>runtime</scope>
		</dependency>

                <dependency>
                        <groupId>edu.vu.isis</groupId>
                        <artifactId>ammogen</artifactId>
                        <version>1.4.3</version>
                        <scope>runtime</scope>
                        <type>xml</type>
                        <classifier>maven-targets</classifier>
                </dependency>

	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<resources>
			<resource>
				<directory>${basedir}/src/test/resources</directory>
				<filtering>true</filtering>
				<targetPath>${basedir}/target/test-classes</targetPath>
			</resource>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
				<filtering>true</filtering>
				<targetPath>${basedir}/target/classes</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<id>generate-contract</id>
						<phase>generate-sources</phase>
						<configuration>
							<target>
								<ant antfile="${edu.vu.isis:ammogen:xml:maven-targets}" inheritAll="true" inheritRefs="true"/>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant-contrib</groupId>
						<artifactId>ant-contrib</artifactId>
						<version>1.0b3</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
				</dependencies>
			</plugin>
                        <plugin>
                                <groupId>org.codehaus.mojo</groupId>
                                <artifactId>build-helper-maven-plugin</artifactId>
                                <executions>
                                        <execution>
                                                <id>add-source</id>
                                                <phase>generate-sources</phase>
                                                <goals>
                                                        <goal>add-source</goal>
                                                </goals>
                                                <configuration>
                                                        <sources>
                                                                <source>${ammogen.output.dir}</source>
                                                        </sources>
                                                </configuration>
                                        </execution>
                                </executions>
                        </plugin>
		</plugins>
	</build>

</project>
