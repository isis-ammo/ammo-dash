<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="CenteredText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18px</item>
		<item name="android:layout_gravity">fill_vertical|center_horizontal</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
	
	<style name="CenteredWhiteText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">18px</item>
		<item name="android:layout_gravity">fill_vertical|center_horizontal</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>

	<style name="CenteredBlackText" parent="CenteredText">
		<item name="android:textColor">#000</item>
	</style>
	
	<style name="HorizontalLinearLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
	</style>
	
	<style name="VerticalLinearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">2px</item>
        <item name="android:layout_marginRight">2px</item>
    </style>

	<style name="HorizontalRule">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">2px</item>
		<item name="android:background">#AAFFFFFF</item>
	</style>
	
	<style name="ClearPadding">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dip</item>
    </style>

	<style name="InteractionEnabledImageButtonTransparentBG">
		<item name="android:background">@null</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:layout_margin">7px</item>
		<item name="android:scaleType">center</item>
	</style>
	
	<style name="HorizontalCustomEditTextLayoutContainer">
	   <item name="android:layout_width">wrap_content</item>
	   <item name="android:layout_height">wrap_content</item>
	   <item name="android:layout_gravity">center_horizontal</item>
	</style>

    <style name="DashStaticCustomEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:minHeight">20px</item>
        <item name="android:paddingLeft">14px</item>
        <item name="android:paddingRight">14px</item>
        <item name="android:paddingTop">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

	<style name="DashButton">
		<item name="android:background">@null</item>
		<item name="android:layout_margin">6dip</item>
		<item name="android:layout_width">48dip</item>
		<item name="android:layout_height">48dip</item>
	</style>

    <style name="DashQueueCount">
	    <item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:textSize">30px</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">0</item>
	    <item name="android:shadowDy">0</item>
	    <item name="android:shadowRadius">4</item>
  </style>
  <style name="MedevacLabel">
  	<item name="android:textSize">16px</item>
  </style>
  
  <style name="MedevacTableRow">
  	<item name="android:layout_marginTop">5px</item>
  	<item name="android:layout_marginBottom">5px</item>
  </style>
</resources>
